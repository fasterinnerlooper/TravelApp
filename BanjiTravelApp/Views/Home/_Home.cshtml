<!-- ko with: home -->
<div class="container-fluid" style="height:100%;">
    <div id="sidebar">
        <button style="margin: 10px;" type="button" class="close" data-bind="click: closeSidebar"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h1 data-bind="text: sidebarTitle"></h1>
        <ul class="nav nav-pills nav-stacked" style="margin-left: 10px;" data-bind="foreach: pinOptions">
            <li>
                <a href="#" data-bind="click: $parent.setMarkerName"><span data-bind="text: $data"></span></a>
            </li>
        </ul>
        <!-- ko with: markerDetails -->
            <input type="hidden" data-bind="text: markerId" />
            <label>Experience:</label><textarea class="form-control" data-bind="value: experience" rows="10"></textarea>
            <label>Likes:</label><textarea class="form-control" data-bind="value: likes" rows="10"></textarea>
            <label>Dislikes:</label><textarea class="form-control" data-bind="value: dislikes" rows="10"></textarea>
            <br/>
            <button type="submit" data-bind="text: $parent.saving, click: $parent.saveMarkerDetails" style="background-color: lightpink" class="btn btn-default">Save</button>
        <!-- /ko -->
        <!-- ko with: travelPlans -->
        <!-- /ko -->
    </div>
    <div id="map-canvas" data-bind="click: createMap(this)"></div>
    <div style="position: absolute; bottom: 50px;padding-left: 10px;" class="col-md-offset-2">
        <ul class="breadcrumb" data-bind="foreach: breadcrumbs">
            <li>
                <a href="#" data-bind="click: $parent.goToBreadcrumb"><span data-bind="text: name"></span></a>
            </li>
        </ul>
    </div>
</div>
<!-- /ko -->
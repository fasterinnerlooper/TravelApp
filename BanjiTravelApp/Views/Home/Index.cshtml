@{
    Layout = null;
    Response.Headers["X-UA-Compatible"] = "IE=10";
    ViewBag.siteTitle = "BanjiTravelApp";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.siteTitle</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=weather,places"></script>
</head>
<body>
    <div style="display: none;height: 100%;padding-top:20px;" data-bind="visible: true" class="container-fluid">
        <div class="navbar navbar-fixed-top navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <p class="navbar-brand">BanjiTravelApp</p>
                </div>
                <div data-bind="if: loggedIn" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right" data-bind="with: user">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Friends <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Add a friend</a></li>
                                <li><a href="#">All Friends</a></li>
                                <li><a href="#">Chat</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Travel Plans <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Where I've been</a></li>
                                <li><a href="#">Where I'm going</a></li>
                                <li><a href="#">Where I'd like to go</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">View <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>Views coming soon</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span data-bind="text: name"></span> <span class="caret"></span></a>

                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#" data-bind="click: manage">Profile</a></li>
                                <li><a href="#" data-bind="click: manage">Settings</a></li>
                                <li><a href="#" data-bind="click: logOff">Log off</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div style="padding-top: 40px;height:100%;">
            @Html.Partial("_Home")
            @Html.Partial("_Login")
            @Html.Partial("_RegisterExternal")
            @Html.Partial("_Manage")
        </div>
        <footer class="footer container-fluid" style="z-index:2;">
            <div class="text-muted">
                <ul class="nav nav-pills nav-justified">
                    <li><a href="#">About</a></li>
                    <li><a href="#">Help</a></li>
                    <li><a href="#">Careers</a></li>
                    <li><a href="#">Terms</a></li>
                    <li><a href="#">Privacy</a></li>
                    <li><a href="#">Cookies</a></li>
                    <li><a href="#">Brand</a></li>
                    <li><a href="#">Developers</a></li>
                    <li><a href="#">Media</a></li>
                    <li class="disabled">&copy; @ViewBag.siteTitle</li>
                </ul>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="//code.jquery.com/ui/1.11.0/jquery-ui.js"></script>
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/app")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
